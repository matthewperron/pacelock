{
  "name": "pacelock",
  "version": "0.1.0",
  "description": "A simracing analytics tool that quantifies driver consistency using statistical analysis of lap times from iRacing race data",
  "private": true,
  "scripts": {
    "setup": "./scripts/setup.sh",
    "setup:legacy": "python3 -m pip install --user -r requirements.txt",
    "dev": "./scripts/dev.sh",
    "dev:backend": "./scripts/dev.sh",
    "dev:server": "python3 -m uvicorn src.api.main:app --reload --port 8000",
    "dev:frontend": "echo 'Frontend not implemented yet'",
    "dev:fullstack": "concurrently \"npm run dev:server\" \"npm run dev:frontend\"",
    "test": "python3 -m pytest",
    "test:coverage": "python3 -m pytest --cov=src tests/",
    "test:watch": "python3 -m pytest-watch",
    "lint": "python3 -m flake8 src/ tests/",
    "format": "python3 -m black src/ tests/",
    "typecheck": "python3 -m mypy src/",
    "quality": "npm run format && npm run lint && npm run typecheck",
    "build": "echo 'Build process not implemented yet'",
    "start": "python3 main.py",
    "db": "source venv/bin/activate && litecli pacelock.db",
    "db:inspect": "source venv/bin/activate && litecli pacelock.db -e \"SELECT name FROM sqlite_master WHERE type='table';\"",
    "clean": "find . -type f -name '*.pyc' -delete && find . -type d -name '__pycache__' -delete"
  },
  "keywords": [
    "iracing",
    "simracing",
    "analytics",
    "consistency",
    "lap-times",
    "racing"
  ],
  "author": "PaceLock Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "python": ">=3.9.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/pacelock.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/pacelock/issues"
  },
  "homepage": "https://github.com/your-username/pacelock#readme"
}